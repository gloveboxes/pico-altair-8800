{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean Build Directory",
            "type": "shell",
            "command": "rm -rf build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build for Pico (Release)",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Release -DPICO_BOARD=pico && cmake --build build -- -j && mkdir -p Releases && cp build/altair.uf2 Releases/altair_pico.uf2",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build for Pico W (Release)",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Release -DPICO_BOARD=pico_w && cmake --build build -- -j && mkdir -p Releases && cp build/altair.uf2 Releases/altair_pico_w.uf2",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build for Pico 2 (Release)",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Release -DPICO_BOARD=pico2 && cmake --build build -- -j && mkdir -p Releases && cp build/altair.uf2 Releases/altair_pico2.uf2",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build for Pico 2 W (Release)",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Release -DPICO_BOARD=pico2_w && cmake --build build -- -j && mkdir -p Releases && cp build/altair.uf2 Releases/altair_pico2_w.uf2",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build for Pimoroni Pico Plus 2W (Release)",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Release -DPICO_BOARD=pimoroni_pico_plus2_w_rp2350 && cmake --build build -- -j && mkdir -p Releases && cp build/altair.uf2 Releases/altair_pimoroni_pico_plus2_w_rp2350.uf2",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build All Boards (Release)",
            "type": "shell",
            "command": "./build_all_boards.sh && mkdir -p Releases && cp tests/pico/altair_pico.uf2 Releases/ && cp tests/pico_w/altair_pico_w.uf2 Releases/ && cp tests/pico2/altair_pico2.uf2 Releases/ && cp tests/pico2_w/altair_pico2_w.uf2 Releases/ && cp tests/pimoroni_pico_plus2_w_rp2350/altair_pimoroni_pico_plus2_w_rp2350.uf2 Releases/",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build for Pico (Debug)",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug -DPICO_BOARD=pico && cmake --build build -- -j",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build for Pico W (Debug)",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug -DPICO_BOARD=pico_w && cmake --build build -- -j",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build for Pico 2 (Debug)",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug -DPICO_BOARD=pico2 && cmake --build build -- -j",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build for Pico 2 W (Debug)",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug -DPICO_BOARD=pico2_w && cmake --build build -- -j",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build for Pimoroni Pico Plus 2W (Debug)",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug -DPICO_BOARD=pimoroni_pico_plus2_w_rp2350 && cmake --build build -- -j",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
